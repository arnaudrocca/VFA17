.mapContainer
	position absolute
	display flex
	flex-direction column
	justify-content center
	align-items center
	width 100vw
	height 100vh
	top 0
	left 0
	transition transform-origin 1s $easeOutExpo, transform 1s $easeOutExpo

	.map
		position relative
		width 100%
		height auto
		overflow visible
		transition transform 1s $easeOutExpo

		&__base
			filter drop-shadow(rgba($fucking-blue, .2) 0px 50px 10px)
