.mapContainer
	position absolute
	display flex
	flex-direction column
	justify-content center
	align-items center
	width 100vw
	height 100vh
	top 0
	left 0
	transition transform-origin 1s $easeOutExpo, transform 1s $easeOutExpo

	.map
		position relative
		width 100%
		height auto
		overflow visible
		transition transform 1s $easeOutExpo

		&__base
			filter drop-shadow(rgba($fucking-blue, .2) 0px 50px 10px)

		.mapItems
			position absolute
			width 100%
			height 100%
			top 0
			left 0

			.mapItemContainer
				position absolute
				width 100%
				height 100%

				.mapItem
					position absolute

					&--turbine
						width 5vw
						height 5vw
						transform-origin 50% 50%
						animation turbine 5s infinite linear

						&-0
							top 46.4%
							left 54%
							animation-delay 1.5s

						&-1
							top 50.1%
							left 58.05%

						&-2
							top 54.1%
							left 62.35%
							animation-delay 1s

						&-3
							top 57.9%
							left 66.6%
							animation-delay .5s
