.end
	position relative
	width 100%
	height 100vh
	overflow hidden
	
	&__main
		position absolute
		top 0
		left 0
		z-index 2
		display flex
		flex-direction column
		justify-content center
		align-items center
		width 50vw
		height 100vh
		
	&__logo
		margin-bottom 5.5rem

	&__content
		display flex
		flex-direction column
		justify-content center
		align-items center
		width 31rem
		color $white
		
	&__title
		margin-bottom 3rem
		font-size 3.2rem
		font-family $font-claudia-shouter
		text-transform uppercase
		
	&__txt
		font-size 1.4rem
		line-height 2.4rem
		font-family $font-pressura-regular
		text-align center
		antialiased()
		
		p:first-child
			margin-bottom 3.5rem
		
	&__btn
		margin-top 5rem
		
		.btn__main__fill > polygon
			fill $purple

	&__background
		position absolute
		top -5vh
		left -5vw
		width 110vw
		height 110vh
		background url('../../static/assets/images/end/end-background.png') no-repeat center
		background-size cover
		