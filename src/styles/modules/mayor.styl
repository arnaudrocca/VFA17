.mayor
	position fixed
	width 10rem
	height 10rem
	bottom 2rem
	left 2rem
	background-size cover
	z-index 5

	&__dialog
		position absolute
		display none
		flex-direction row
		justify-content center
		align-items center
		width 30rem
		min-height 16rem
		bottom 7.5rem
		left 7.5rem
		padding 2rem
		font-family $font-pressura-regular
		font-size 1.3rem
		line-height 2em
		background linear-gradient(135deg, transparent 0, $white 0) top left, linear-gradient(225deg, transparent 2.5rem, $white 0) top right, linear-gradient(225deg, transparent 0, $white 0) bottom right, linear-gradient(45deg, transparent 2.5rem, $white 0) bottom left
		background-repeat no-repeat
		background-size 50% 50%
		opacity 0
