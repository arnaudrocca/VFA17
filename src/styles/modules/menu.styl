.menu
	position fixed
	top 0
	right 0
	bottom 0
	left 0
	z-index 10
	display none
	flex-direction row
	justify-content center
	align-items center
	width 100%
	height 100vh
	background rgba($blue-darker,0.25)
	
	&__slice
		position relative
		display flex
		flex-direction column
		justify-content center
		align-items center
		width calc((100% - 4rem) / 6)
		height calc(100vh - 4rem)
		
		&:after
			content ''
			position absolute
			top 0
			right 0
			height calc(100vh - 4rem)
			width 0.1rem
			background rgba($white,0.3)
			
		&--empty
			&:after
				content none
			
				
	&__item
		position relative
				
	&__label
		position absolute
		top 10rem
		right 0
		left 0
		text-align center
		font-size 1.2rem
		font-family $font-cooper-heavy
		text-transform uppercase
		letter-spacing 0.6px
		color rgba($white,0.6)
		antialiased()
		
	&__infos
		position absolute
		right 0
		bottom 5.5rem
		left 0
		text-align center
		font-size 1.4rem
		font-family $font-pressura-regular
		letter-spacing 0.2px
		color $white
		antialiased()

		
				