.menu
	position fixed
	top 0
	right 0
	bottom 0
	left 0
	z-index 10
	display none
	flex-direction row
	justify-content center
	align-items center
	width 100%
	height 100vh
	background rgba($blue-darker,0.25)

	&__slice
		position relative
		width calc((100vw - 4rem) / 6)
		height calc(100vh - 4rem)

		&:after
			content ''
			position absolute
			top 0
			right 0
			height calc(100vh - 4rem)
			width 0.1rem
			background rgba($white,0.3)

		&--empty
			&:after
				content none

	&__item
		position absolute
		top 50%
		right 0
		left 0
		transform translateY(-50%)

		svg
			display block
			margin 0 auto

	&__label
		position absolute
		top 10rem
		right 0
		left 0
		text-align center
		font-size 1.2rem
		font-family $font-cooper-heavy
		text-transform uppercase
		letter-spacing 0.6px
		color rgba($white,0.6)
		antialiased()

	&__infos
		position absolute
		right 0
		bottom 5.5rem
		left 0
		text-align center
		font-size 1.4rem
		font-family $font-pressura-regular
		letter-spacing 0.2px
		color $white
		antialiased()

	&__btn
		position absolute
		top calc(50% - 1.5rem)
		right calc(((100vw - 4rem) / 12) + .5rem)
		z-index 110
		width 3rem
		height 3rem
		background $red
		border-radius 50%
		cursor w-resize !important

		transition transform .5s $easeOutExpo

		span
			position absolute
			top 50%
			left 50%
			width 0.4rem
			height 0.4rem
			background $white
			border-radius 50%
			transform translate3d(-50%,-50%, 0)

			&:after,&:before
				content ''
				position absolute
				top 50%
				width 0.4rem
				height 0.4rem
				background $white
				border-radius 50%
				transform translate3d(-50%,-50%, 0)

			&:after
				left calc(50% - 0.6rem)

			&:before
				left calc(50% + 0.6rem)
