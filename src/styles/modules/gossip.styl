.gossip
	width 54rem
	padding 0 5rem 0 2.5rem
	font-family $font-cooper-medium 
	font-size 3rem
	color $white
	antialiased()
	
	&__text
		margin 3.5rem 0 2rem
		color $white
	
	&__field
		position relative
		
		&:after
			content ''
			position absolute
			top 50%
			z-index 110
			right -2.5rem
			display block
			width 0
			height 0
			border-left 0.7rem solid transparent
			border-right 0.7rem solid transparent
			border-top 0.8rem solid $red
		
		> div 
			position relative
			height 7rem
		
		&__label
			position absolute
			z-index 110
			display block
			width 100%
			height 6.5rem
			border-bottom 1px solid rgba($white,0.3)
			line-height 6.5rem
			color red
			cursor pointer
			color rgba($white,0.4)
		
		&__list
			position absolute
			top 0
			right 0
			left -2.5rem
			z-index 100
			display none
			width 54rem
			height 21rem
			padding 7.5rem 0 0 2.5rem
			list-style-type none
			background $white
			color rgba($purple, 0.6)
			overflow auto
			
			&::-webkit-scrollbar 
				width 0.5rem
				padding-right 1rem
				background $white
			 
			&::-webkit-scrollbar-thumb 
				background $grey-light
			
			
		&__list-item
			line-height 1.8em
			cursor pointer
			
		&.is-active
				
			&:after
				z-index 210
			
			.gossip__field__label
				z-index 210
				border-bottom 1px solid rgba($purple,0.3)
				background $white
				color $purple
				
				
			.gossip__field__list
				z-index 200