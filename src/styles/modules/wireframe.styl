.wireframe-side
	position fixed
	z-index 10
	pointer-events none
	
	&:after
		content ''
		position absolute
		display block
		background $white
				
	&--top, &--bottom
		left 2rem
		height 2rem
		width calc(100vw - 4rem)
		
		&:after
			width calc(100% - 2.9rem)
			height 0.1rem
		
		&:before
			content ''
			position absolute
			display block
			height 4.24264068712rem
			width 0.1rem
			background $white
			transform rotate(-45deg)
	
			
	&--left, &--right
		top 2rem
		height calc(100vh - 4rem)
		width 2rem
		
		&:after
			width 0.1rem
			height calc(100% - 2.8rem)
			
	
	&--top 
		top 0	
		&:after
			bottom 0
			right 2.9rem
			
		&:before
			top 0.7rem;
			right -0.1rem
			transform-origin 0 100%
		
		.wireframe-side__trapezoid
			position absolute
			top 2rem
			left 50%
			transform scale(-1) translateX(50%)
		
	&--right 
		right 0
		&:after
			left 0
			top 2.9rem
			
		.wireframe-side__trapezoid
			position absolute
			top 50%
			right 2rem
			transform-origin 100% 100%
			transform rotate(-90deg) translateX(50%)
			
		.wireframe-side__arrow
			top -0.1rem
			right 1.9rem
			border-top 1.5rem solid $white
			border-left 1.5rem solid transparent
		
	&--bottom 
		bottom 0
		&:after
			top 0
			left 2.9rem
			
		&:before
			bottom 0.7rem
			left -0.1rem
			transform-origin 100% 0
			
		.wireframe-side__trapezoid
			position absolute
			bottom 2rem
			left 50%
			transform translateX(-50%)

	&--left 
		left 0
		&:after
			right 0
			bottom 2.9rem
			
		.wireframe-side__trapezoid
			position absolute
			top 50%
			left 2rem
			transform-origin 0 100%
			transform rotate(90deg) translateX(-50%)
			
	&__trapezoid
		display block
		width 10rem
		height 0
		border-bottom 0.6rem solid $white
		border-left 0.6rem solid transparent
		border-right 0.6rem solid transparent
		
	&__arrow
		display block
		position absolute
		width 0
		height 0
		
		
			