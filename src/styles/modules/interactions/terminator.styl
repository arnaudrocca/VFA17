.terminator
    position relative
    display flex
    flex-direction column
    justify-content center
    align-items center
    width 70rem
    margin-left -2rem

    &__container
        position relative
        width 100%
        height 36.5rem
        margin-top -5rem
        border 1px solid rgba(255,255,255, .3)
        overflow hidden

    &__spacebar
        position absolute
        width 20.5rem
        height 5rem
        right 0
        bottom -11rem
        left 0
        margin 0 auto
        border 2px solid rgba($white, .5)
        border-radius .5rem
        color $white
        font-family $font-cooper-bold
        font-size 1rem
        text-transform uppercase
        letter-spacing .8px
        text-align center
        line-height 5rem
        antialiased()

    &__image
        position absolute
        
        // &__over
        //     position absolute
        //     top 0
        //     left 0
        //     z-index 3 
                 
        &--user
            z-index 2
            top calc(50% - 90px)
            left -26rem
            transition transform .3s $easeOutExpo
            
        &--mayor-under
            z-index 1
            top calc(50% - 50px)
            right -6rem
            height 10rem
            transform translateY(-50%)
            transform-origin 100% 50%
            // animation grab .6s ease-out infinite
            
        &--mayor-over
            z-index 3
            top calc(50% - 50px)
            right -6rem
            height 10rem
            transform translateY(-50%)
            transform-origin 100% 50%
            // animation grab .6s ease-out infinite
            
    &__hold
        position absolute 
        right 0
        bottom 0
        left 0
        display none
        width 7rem
        margin 0 auto
        transform-origin 50% 50%
        transform translateY(50%) scale(0)
        
        &__icon
            transform rotate(-90deg)
        
        &__label
            position absolute 
            top 50%
            display block
            width 100%
            font-family $font-pressura-regular
            font-size 1.4rem
            text-align center
            text-transform uppercase
            color $blue-dark
            transform translateY(-50%)

