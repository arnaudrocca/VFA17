.mapItems
	position absolute
	width 100%
	height 100%
	top 0
	left 0

	.mapItemContainer
		position absolute
		width 100%
		height 100%

		.mapItem
			position absolute

			&__turbine
				width 100%
				height 100%
				transform-origin 50% 50%
				animation rotate 6s infinite linear

				&-0
					animation-delay -1.5s
				&-1
					animation-delay 0s
				&-2
					animation-delay -1.25s
				&-3
					animation-delay -0.5s

				&__container
					position absolute
					width 20vw
					height 20vw
					transform-origin 0% 0%
					transform scale(.25)

					&-0
						top 46.4%
						left 54%
					&-1
						top 50.1%
						left 58.05%
					&-2
						top 54.1%
						left 62.35%
					&-3
						top 58%
						left 66.6%

/*
 * ReactCSSTransitionGroup
 */
.mapItems-leave
	opacity 1
	filter brightness(100%) blur(0px)
	transition opacity 1.5s ease-in-out, filter 1.5s ease-in-out

	&-active
		opacity 0
		filter brightness(1000%) blur(10px)

.mapItems-enter
	opacity 0
	filter brightness(1000%) blur(10px)
	transition opacity 1.5s ease-in-out, filter 1.5s ease-in-out

	&-active
		opacity 1
		filter brightness(100%) blur(0px)
		transform translateY(0)
