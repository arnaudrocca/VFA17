.mapItems
	position absolute
	width 100%
	height 100%
	top 0
	left 0

	.mapItemContainer
		position absolute
		width 100%
		height 100%

		.mapItem
			position absolute

			&--turbine
				width 20vw
				height 20vw
				filter blur(0)
				transform-origin 50% 50%
				animation turbine 6s infinite linear

				&-0
					top 34.1%
					left 46.5%
					animation-delay -1.5s

				&-1
					top 37.8%
					left 50.55%

				&-2
					top 41.8%
					left 54.85%
					animation-delay -1s

				&-3
					top 45.7%
					left 59.1%
					animation-delay -0.5s

/*
 * ReactCSSTransitionGroup
 */
.mapItems-leave
	opacity 1
	filter brightness(100%) blur(0px)
	transition opacity 1.5s ease-in-out, filter 1.5s ease-in-out

	&-active
		opacity 0
		filter brightness(1000%) blur(10px)

.mapItems-enter
	opacity 0
	filter brightness(1000%) blur(10px)
	transition opacity 1.5s ease-in-out, filter 1.5s ease-in-out

	&-active
		opacity 1
		filter brightness(100%) blur(0px)
		transform translateY(0)
