.about
    position absolute
    display none
    flex-direction row
    justify-content center
    align-items center
    width 100%
    height 100%
    z-index 120
    opacity 0

    &__container
        position relative
        width 60rem
        height 40rem
        background linear-gradient(-45deg, rgba($white, 0) 5%, rgba($white, 1) 5%, rgba($white, 1) 95%, rgba($white, 0) 95%)
        padding 3rem
        font-family $font-cooper-bold
        font-size 1.2rem
        letter-spacing 0.4px
        antialiased()

        &__close
            position absolute
            display block
            width 2rem
            height 2rem
            right 1rem
            top 2rem
            cursor pointer

            &:before
                content ''
                position absolute
                display block
                width 100%
                height .2rem
                background $purple
                transform-origin 50% 50%
                transform rotate(45deg)
                transition transform .2s ease-out

            &:after
                content ''
                position absolute
                display block
                width 100%
                height .2rem
                background $purple
                transform-origin 50% 50%
                transform rotate(-45deg)
                transition transform .2s ease-out

            &:hover
                &:before
                    transform rotate(45deg) scale(1.1)

                 &:after
                    transform rotate(-45deg) scale(1.1)

            &:active
                &:before
                    transform rotate(45deg) scale(.9)

                 &:after
                    transform rotate(-45deg) scale(.9)

    &__content
        position relative
