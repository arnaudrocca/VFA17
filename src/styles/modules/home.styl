.home
	position relative
	width 100%
	height 100vh

	&__intro
		position absolute
		display flex
		flex-direction column
		justify-content center
		align-items center
		width calc(50vw - 2rem)
		height 100vh
		top 0
		left 2rem
		text-align center
		z-index 2

	&__title
		color $purple
		font-family $font-cooper-heavy
		font-size 3rem
		line-height 3.6rem
		text-transform uppercase

	&__content
		margin-top 2rem
		color $grey-dark
		font-family $font-pressura-regular
		font-size 1.4rem
		line-height 2.4rem

	&__video
		position relative
		width 100vw
		height 100vh
		object-fit cover
		opacity 0.2
