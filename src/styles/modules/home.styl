.home
	position relative
	width 100%
	height 100vh
	
	&__intro
		position absolute
		top 0
		left 2rem
		z-index 2
		display flex
		flex-direction column
		justify-content center
		align-items center
		width calc(50vw - 2rem)
		height 100vh
		text-align center
		
	&__title
		font-size 3rem
		line-height 3.6rem
		font-family $font-cooper-heavy
		text-transform uppercase
		color $purple
		
	&__content
		margin-top 2rem
		font-size 1.4rem
		line-height 2.4rem
		font-family $font-pressura-regular
		color $grey-dark
	
	&__video
		position relative
		width 100vw
		height 100vh
		object-fit cover
		opacity 0.2
