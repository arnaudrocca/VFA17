.hotpoints
    position absolute
    width 100%
    height 100%
    top 0
    left 0
    z-index 110

    .hotpoint
        position absolute
        cursor pointer

        span
            display block
            width 1.5rem
            height 1.5rem
            background-color $white
            border-radius 50% 50% 0 50%
            transform-origin 100% 100%
            animation hotpoints 2s infinite
