.hotpoints
    position absolute
    width 100%
    height 100%
    top 0
    left 0
    z-index 110

    .hotpoint
        position absolute
        cursor pointer
        width 2.5rem
        height 2.5rem
        transform-origin 50% 100%
        animation hotpoints 2s infinite

        span
            display block
            width 100%
            height 100%
            background-color $white
            border-radius 50% 50% 0 50%
            transform-origin 50% 50%
            transform rotate(45deg)
