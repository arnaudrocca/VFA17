body
	height 100vh
	background $background-color
	overflow hidden

.mess
	position fixed
	left 0
	top 0
	z-index 10

.mainMenu
	.done
		color black
		text-decoration none

	.todo
		color blue
		text-decoration none

	.disabled
		color black
		text-decoration line-through
		cursor default

.choices
	position fixed
	width 100%
	left 0
	bottom 0
	z-index 10

	&-nav
		position fixed
		top 50%

.hotpoint
	cursor pointer
